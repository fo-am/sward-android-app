<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewFieldActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/SwardThemeOverlay_Toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".NewFieldActivity"
        tools:showIn="@layout/activity_new_field">

        <EditText
            android:id="@+id/new_field_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="@string/hint_field"
            android:importantForAutofill="no"
            android:inputType="textAutoComplete"
            android:minHeight="@dimen/min_height"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="379dp"
            tools:layout_editor_absoluteX="-5dp" />

        <TextView
            android:id="@+id/new_field_date_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/field_date_sown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_field_name" />

        <TextView
            android:id="@+id/new_field_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/new_field_date_text"
            app:layout_constraintTop_toBottomOf="@+id/new_field_name" />

        <TextView
            android:id="@+id/new_field_soil_type_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/field_soil_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_field_date" />

        <Spinner
            android:id="@+id/new_field_soil_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/new_field_soil_type_text"
            app:layout_constraintTop_toBottomOf="@+id/new_field_date" />

        <TextView
            android:id="@+id/new_field_notes_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/field_notes"
            app:layout_constraintTop_toBottomOf="@id/new_field_soil_type"
            tools:layout_editor_absoluteX="30dp" />

        <EditText
            android:id="@+id/new_field_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/field_notes_hint"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:minLines="5"
            app:layout_constraintTop_toBottomOf="@id/new_field_notes_text"
            tools:layout_editor_absoluteX="30dp" />

        <Button
            android:id="@+id/new_field_button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_field_save"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="379dp"
            tools:layout_editor_absoluteX="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>