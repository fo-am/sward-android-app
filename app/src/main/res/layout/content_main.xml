<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/fields_recycler_view"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/new_field_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_new_field"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/new_field_button"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/download_data_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_download_data"
        app:layout_constraintTop_toBottomOf="@+id/space"
        tools:layout_editor_absoluteX="30dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fields_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/space3"
        tools:layout_editor_absoluteX="30dp">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>