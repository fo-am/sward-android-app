<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".id_fragments.IdResultFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding" />

    <TextView
        android:id="@+id/species_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/species_name_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding" />

    <ImageView
        android:id="@+id/species_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass_perennialryegrass_plant" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding" />

    <Button
        android:id="@+id/species_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/id_results_species_info" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding" />

    <Button
        android:id="@+id/id_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/id_results_id_again" />
</LinearLayout>