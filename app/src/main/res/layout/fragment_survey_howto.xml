<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".survey_fragments.SurveyHowtoFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/survey_howto_1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/survey_howto_2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/survey_howto_3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/survey_example_field"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/survey_image_desc"
        android:paddingBottom="10dp"
        android:src="@drawable/example_w" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/survey_date" />

        <TextView
            android:id="@+id/new_survey_date"
            style="@style/SwardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|left|center_vertical"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding" />

    <Button
        android:id="@+id/start_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/survey_start" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding" />


</LinearLayout>